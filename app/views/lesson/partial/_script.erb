<div id="Script" class="activeTab"> <!--------------------------------------------------------Script tab-->

  <p>&nbsp</p>
  <table id="meta-data">
    <tr class="titles">
      <td>After completion of this lesson you will know:</td>
      <td>Lesson Info:</td>
    </tr>
    <tr>
      <td id="objectives">
        <ol>
          <% @lesson.objectives.each do |objective| %>
              <li><%= objective.title %></li>
          <% end %>
        </ol>
      </td>

      <td id="lesson-info">
        <ul>
          <li>Lecturer: <%= @lesson.author %></li>
          <li>Description: <%= @lesson.description %></li>
        </ul>
      </td>
    </tr>
  </table>
  <hr>
  <div>
    <!--if logged in-->
    <%= render :partial => "lesson/partial/annotations" %>
    <!--end if logged in-->

    <%= raw @lesson.script %>
  </div>

</div> <!------------------------------------------------------------------------------end of Script tab-->