<div id="dialog_sign_up" class="window orange_window">
  <p id="sign_up_thanks" class="thanks_msg">Thank you for sign up!</p>

  <div id="sign_up_form_wrapper">
    <h1>Sign Up</h1>

    <p class="window_txt">Signing up for an account is FREE.</p>

    <%= form_for @user, url: '/fake', html: {id: 'sign_up_form'} do |f| %>
      <ul class="inputs">
        <li>
          <%= f.label :name, 'Name:' %>
          <%= f.text_field :name %>
        </li>
        <li>
          <%= f.label :mail_address, 'Email:' %>
          <%= f.text_field :mail_address %>
        </li>
        <li>
          <%= f.label :password, 'Password:' %>
          <%= f.password_field :password %>
        </li>
        <li>
          <%= f.label :password_confimation, 'Password Confirm:' %>
          <%= f.password_field :password_confimation %>
        </li>
      </ul>

      <%= f.button 'Cancel', class: 'close' %>
      <%= f.submit 'Submit' %>
    <% end %>

  </div>
</div>